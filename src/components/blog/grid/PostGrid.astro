---
import type { PostEntity } from '../../../lib/strapi';
import PostGridItem from './PostGridItem.astro';

interface Props {
  posts: PostEntity[];
}

const { posts } = Astro.props;
---

<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {
    posts.map((post) => (
      <li>
        <PostGridItem post={post} />
      </li>
    ))
  }
</ul>
